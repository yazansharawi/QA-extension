{
    "manifest_version": 3,
    "name": "DesignQA Bug Reporter",
    "version": "1.0.0",
    "description": "Flag broken buttons on webpages and store reports in Supabase",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "commands": {
      "toggle-highlight-mode": {
        "suggested_key": {
          "default": "Alt+B"
        },
        "description": "Toggle button highlight mode"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }